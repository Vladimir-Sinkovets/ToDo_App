@model ActiveListViewModel

<h3>Active:</h3>


<ul class="list-group">
    @foreach (var item in Model.ToDos)
    {
        <li class="list-group-item">
            <div class="d-flex justify-content-between">
                <div>
                    <span>@item.Title, @item.Created</span>
                </div>

                <div class="d-flex">

                    <form class="form-inline mr-2" asp-action="Delete" asp-controller="ToDo"
                          asp-route-id="@item.Id" asp-route-redirectUrl="@Context.Request.Path" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                    <form class="form-inline mr-2" asp-action="Complete" asp-controller="ToDo" asp-route-id="@item.Id" method="post">
                        <button type="submit" class="btn btn-primary">Complete</button>
                    </form>

                    <a class="btn btn-info" asp-action="Edit" asp-controller="ToDo" asp-route-id="@item.Id"
                        asp-route-redirectUrl="@Context.Request.Path">Edit</a>
                </div>
            </div>
        </li>
    }

</ul>