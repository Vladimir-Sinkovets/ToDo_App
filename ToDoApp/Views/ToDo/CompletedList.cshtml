@model CompletedListViewModel

<h3>Completed:</h3>

<ul class="list-group">
    @foreach (var item in Model.ToDos)
    {
        <li class="list-group-item">
            <div class="d-flex justify-content-between">
                <div>
                    <span class="text-light bg-info rounded">@item.Title, @item.Created</span>
                </div>

                <div class="d-flex">
                    <form class="form-inline mr-2" asp-action="Delete" asp-controller="ToDo"
                        asp-route-id="@item.Id" method="post">
                
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>

        </li>
    }
</ul>